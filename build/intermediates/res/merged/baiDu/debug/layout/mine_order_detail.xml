<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_top" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/OrderDetailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单信息" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="6dip"
                    android:background="@color/orderDetail" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:background="@color/background_color"
                    android:gravity="center_vertical"
                    android:padding="5dip"
                    android:shrinkColumns="1"
                    android:stretchColumns="1" >

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="订单号："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_orderId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="订单状态："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_orderStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="支付状态："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_payStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="配送状态："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_shipStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>
                </TableLayout>

                <TextView
                    style="@style/OrderDetailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商品信息" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="6dip"
                    android:background="@color/orderDetail" />

                <ListView
                    android:id="@+id/orderDetail_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </ListView>

                <TextView
                    style="@style/OrderDetailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="费用总计" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="6dip"
                    android:background="@color/orderDetail" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:background="@color/background_color"
                    android:gravity="center_vertical"
                    android:padding="5dip"
                    android:shrinkColumns="1"
                    android:stretchColumns="1" >

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="商品总价："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_goodAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="配送费用："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_shipFee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>
 					<TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="使用优惠券："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_userbonus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>
                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="应付款："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_orderAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>
                </TableLayout>

                <TextView
                    style="@style/OrderDetailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="收货人信息" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="6dip"
                    android:background="@color/orderDetail" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:background="@color/background_color"
                    android:gravity="center_vertical"
                    android:padding="5dip"
                    android:shrinkColumns="1"
                    android:stretchColumns="1" >

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="收货人："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_consignee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="电子邮件："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="收货地址："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="手机号码："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="电话号码："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_tel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="标志建筑："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_signBuilding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="最佳送货时间："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_bestTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>
                </TableLayout>

                <TextView
                    style="@style/OrderDetailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支付方式" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="6dip"
                    android:background="@color/orderDetail" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:background="@color/background_color"
                    android:gravity="center_vertical"
                    android:padding="5dip"
                    android:shrinkColumns="1"
                    android:stretchColumns="1" >

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="支付方式："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_payName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="应付金额："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_orderAmount2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>
                </TableLayout>

                <TextView
                    style="@style/OrderDetailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="其他信息" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="6dip"
                    android:background="@color/orderDetail" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dip"
                    android:background="@color/background_color"
                    android:gravity="center_vertical"
                    android:padding="5dip"
                    android:shrinkColumns="1"
                    android:stretchColumns="1" >

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="配送方式："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_shipName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="支付方式："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_payName2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="缺货处理："
                            android:textColor="@color/orderDetail" />

                        <TextView
                            android:id="@+id/orderDetail_oosName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orderDetail" />
                    </TableRow>
                </TableLayout>
                
                <Button
            android:id="@+id/orderDetail_payfor"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/red"
            android:text="付款"
            android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/orderDetail_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical" >

            <ProgressBar
                android:layout_width="60dip"
                android:layout_height="60dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在加载中..."
                android:textColor="@color/black" />
        </LinearLayout>
    </FrameLayout>
    
  

</LinearLayout>
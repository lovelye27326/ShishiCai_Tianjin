<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e6e5e5"
        android:padding="10dip"
        android:descendantFocusability="blocksDescendants"
        >

        <ImageView
            android:id="@+id/collect_article_logo"
            android:layout_width="120dp"
            android:layout_height="90dp"
             android:gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/collect_article_logo"
            android:gravity="center_vertical"
            android:orientation="vertical" >
 			<TextView
                android:id="@+id/collect_article_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78123-120" />
 			<TextView
                android:id="@+id/collect_article_addtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.01元" />           
        </LinearLayout>

        <Button
            android:id="@+id/cllect_article_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/delete_bg"
            android:button="@null"
            android:gravity="center_vertical" />

    </RelativeLayout>
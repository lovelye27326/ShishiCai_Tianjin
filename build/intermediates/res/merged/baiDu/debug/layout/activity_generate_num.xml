<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="所有号码:"
            android:textColor="@color/black_cart"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" >
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:background="@drawable/ball_one"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:text="0"
                android:textSize="13sp" />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/ball_one"
                android:text="1"
                android:textSize="13sp" />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:background="@drawable/ball_one"
                android:gravity="center"
                android:text="2"
                android:textSize="13sp" />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:background="@drawable/ball_one"
                android:gravity="center"
                android:text="3"
                android:textSize="13sp" />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:background="@drawable/ball_one"
                android:gravity="center"
                android:text="4"
                android:textSize="13sp" />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:background="@drawable/ball_one"
                android:gravity="center"
                android:text="5"
                android:textSize="13sp" />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:background="@drawable/ball_one"
                android:gravity="center"
                android:text="6"
                android:textSize="13sp" />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:background="@drawable/ball_one"
                android:gravity="center"
                android:text="7"
                android:textSize="13sp" />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:background="@drawable/ball_one"
                android:gravity="center"
                android:text="8"
                android:textSize="13sp" />
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:background="@drawable/ball_one"
                android:gravity="center"
                android:text="9"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"

            >
            <Button
                android:id="@+id/tv_generate"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/select_btn_style"
                android:text="做号"/>

            <Button
                android:id="@+id/tv_save"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/select_btn_style"
                android:text="保存截图"/>

            <Button
                android:id="@+id/tv_clean"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/select_btn_style"
                android:text="清空"/>
        </LinearLayout>

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp" />
    <ListView
        android:id="@+id/msg_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#cacbd1"
        android:dividerHeight="0.5px"
        android:listSelector="@drawable/list_selector_bg"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        />

</LinearLayout>

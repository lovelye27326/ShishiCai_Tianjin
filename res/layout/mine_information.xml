<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_mine_infor" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />
     <RelativeLayout
        android:id="@+id/mine_relative_nickname"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称："
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/address_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/g_pay"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/mine_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/address_img"
            android:text="请输入"
            android:textSize="16sp" />
        
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />
    
    <RelativeLayout
        android:id="@+id/mine_relative_birthday"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生日期："
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/address_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/g_pay"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/mine_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/address_img1"
            android:text="请选择"
            android:textSize="16sp" />
        
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />
    <RelativeLayout
        android:id="@+id/mine_relative_gender"
        android:layout_width="match_parent"
        android:layout_height="40dip"
           android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别："
            android:textSize="16sp" />

         <ImageView
            android:id="@+id/address_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/g_pay"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/mine_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/address_img2"
            android:text="请选择"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/mine_relative_email"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/address_tv_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱："
            android:textSize="16sp" />

          <ImageView
            android:id="@+id/address_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/g_pay"
            android:layout_alignParentRight="true"
            />
        
        <TextView
            android:id="@+id/mine_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/address_tv_you"
            android:layout_toLeftOf="@id/address_img3"
            android:singleLine="true"
            android:gravity="right"
            android:text="请输入"
            android:textSize="16sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />
    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="订单状态"
							/>
    	 	<TextView
            android:id="@+id/myorder_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已取消,未付款,未发货" />
    	 	 <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="订单金额"
							/>
    	 <TextView
                android:id="@+id/myorder_total_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥789.00元" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

         <ImageView
            android:id="@+id/order_goods_logo"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dip"
            android:scaleType="fitXY" />
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
               <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hiyoga" />

         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
             <TextView
                android:id="@+id/goods_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尺码颜色" />
            
             <TextView
                android:id="@+id/goods_sn"
                android:layout_toRightOf="@id/goods_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sn" />
              <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                android:text="价格" />
          </RelativeLayout>
            
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/myorder_order_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="订单号"/>
		<TextView
            android:id="@+id/goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignParentRight="true"
            android:text="数目"/>
    </RelativeLayout>
   </LinearLayout>
            
            
 </LinearLayout>

</LinearLayout>
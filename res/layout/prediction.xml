<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/login_text"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:gravity="center_horizontal">

				<TextView
					android:id="@+id/msg_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/white"
					android:layout_marginRight="20dp"
					android:text="20170517 11:01"
					android:textSize="16sp" />

				<TextView
					android:id="@+id/msg_title"
					android:maxLines="1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="7dp"
					android:textSize="16sp"
					android:text="018期开奖结果"
					android:textColor="@color/white"/>

			</LinearLayout>


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/line_e9"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:gravity="center_horizontal">
				<TextView
					android:id="@+id/msg_one"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:textColor="@color/white"
					android:gravity="center"
					android:layout_marginLeft="3dp"
					android:background="@drawable/ball_one"
					android:text="1"
					android:textSize="13sp" />
				<TextView
					android:id="@+id/msg_two"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:textColor="@color/white"
					android:background="@drawable/ball_one"
					android:gravity="center"
					android:text="2"
					android:textSize="13sp" />
				<TextView
					android:id="@+id/msg_three"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:textColor="@color/white"
					android:background="@drawable/ball_one"
					android:gravity="center"
					android:text="3"
					android:textSize="13sp" />
				<TextView
					android:id="@+id/msg_four"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:textColor="@color/white"
					android:background="@drawable/ball_one"
					android:gravity="center"
					android:text="4"
					android:textSize="13sp" />
				<TextView
					android:id="@+id/msg_five"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:textColor="@color/white"
					android:background="@drawable/ball_one"
					android:gravity="center"
					android:text="5"
					android:textSize="13sp" />
				<TextView
					android:id="@+id/msg_six"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:textColor="@color/white"
					android:background="@drawable/ball_one"
					android:gravity="center"
					android:visibility="gone"
					android:text="6"
					android:textSize="13sp" />
				<TextView
					android:id="@+id/msg_seven"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:textColor="@color/white"
					android:background="@drawable/ball_one"
					android:gravity="center"
					android:visibility="gone"
					android:text="7"
					android:textSize="13sp" />
				<TextView
					android:id="@+id/msg_eight"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:textColor="@color/white"
					android:background="@drawable/ball_one"
					android:gravity="center"
					android:visibility="gone"
					android:text="8"
					android:textSize="13sp" />
				<TextView
					android:id="@+id/msg_nine"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:textColor="@color/white"
					android:background="@drawable/ball_one"
					android:gravity="center"
					android:visibility="gone"
					android:text="9"
					android:textSize="13sp" />
				<TextView
					android:id="@+id/msg_ten"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:textColor="@color/white"
					android:background="@drawable/ball_one"
					android:gravity="center"
					android:visibility="gone"
					android:text="10"
					android:textSize="13sp" />
			</LinearLayout>
		</LinearLayout>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="visible">
		<android.support.v4.view.ViewPager
			android:id="@+id/home_vp"
			android:layout_width="match_parent"
			android:layout_height="150dp" />
		<LinearLayout
			android:id="@+id/liner_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:gravity="center_horizontal"
			android:background="#50000000"
			android:orientation="horizontal" />
	</FrameLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:textColor="@color/TextColorBlack"
		android:paddingLeft="20dp"
		android:gravity="center_vertical"
		android:background="@color/share_back"
		android:text="热门"
		android:textSize="16sp" />
	<!-- GridView -->
	<ListView
		android:id="@+id/tab_gv"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:cacheColorHint="#00000000"
		android:divider="#cacbd1"
		android:dividerHeight="0.5px"
		android:listSelector="@drawable/list_selector_bg"
		android:fadingEdge="none"
		android:footerDividersEnabled="true"
        android:layout_marginLeft="5dp"
		android:numColumns="2"
		android:stretchMode="columnWidth"
		android:verticalSpacing="10dp"
		/>

</LinearLayout>
